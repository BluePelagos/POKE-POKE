  <div class="container">
    <h1>index</h1>
      <div class="cards mt-3">
        <% @pokemons.each do |pokemon| %>
          <div class="card-category">

            <% if pokemon.photo.present? %>
            <%= cl_image_tag pokemon.photo, :height=>200, :crop=>"fill" %>
            <% end %>

            <!-- <div class="inner-card"> -->

            <% if policy(pokemon).show? %>
              <h2><%= link_to pokemon.name, pokemon_path(pokemon) %></h2>
            <% end %>

            <% if policy(pokemon).new? %>
              <h2><%= link_to 'Add a pokemon', new_pokemon_path %></h2>
            <% end %>

            <% if policy(pokemon).edit? %>
              <h2><%= link_to 'edit', edit_pokemon_path(pokemon) %></h2>
            <% end %>

            <% if policy(pokemon).destroy? %>
              <h2><%= link_to 'delist', pokemon_path(pokemon), method: :delete, data: { confirm: 'Are you sure?' } %></h2>
            <% end %>

            <!-- </div> -->
          </div>
        <% end %>

