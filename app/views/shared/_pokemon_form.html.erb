<div class="container">
  <%= simple_form_for(@pokemon) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "input-control" %> <br>
      <%= f.text_field :name, class: "form-control" %> <br>

      <%= f.label :level, class: "input-control" %> <br>
      <%= f.text_field :level, class: "form-control"  %> <br>

      <%= f.label :address, class: "input-control" %> <br>
      <%= f.text_field :address, class: "form-control" %> <br>

      <%= f.label :price_per_day, class: "input-control" %> <br>
      <%= f.text_field :price_per_day, class: "form-control" %> <br>

      <%= f.submit "Submt Pokemon", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

