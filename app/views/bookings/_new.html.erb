
<%= simple_form_for [@pokemon, @booking] do |f| %>

  <% if @booking.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%#= f.input :start_dt, as: :date, html5: true, label: "Start Date" %>
  <%#= f.input :end_dt, as: :date, html5: true, label: "End Date" %>

  <%#= f.submit "Book this Pokemon", class: "btn btn-primary" %>

<div id='pokemon-booking-dates' data-unavailable="<%= @pokemon.unavailable_dates.to_json %>">
  <%= simple_form_for([@pokemon, @booking]) do |f| %>
  <%= f.input :start_dt, as: :string, label: "Dates", placeholder: "From", wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.input :end_dt, as: :string, label: '&nbsp;'.html_safe, placeholder: "To", disabled: true, wrapper_html: { class: "inline_field_wrapper" } %>
  <%= f.submit "Book Now!", class: "btn btn-primary btn-lg btn-block btn-booking" %>
  <% end %>
</div>

<% end %>

